generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  stock       Int
  category    String
  sku         String 
  rating      Float?
  image       String?
  description String?  // âœ… must be here exactly
  createdAt   DateTime @default(now())
}

